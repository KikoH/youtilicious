<div class="row">
  <div class="col s12">
    <ul class="tabs">
      <li class="tab col s3"><a href="#all">All</a></li>
      <li class="tab col s3"><a href="#weddings">Weddings</a></li>
      <li class="tab col s3"><a href="#birthdays">Birthdays</a></li>
      <li class="tab col s3"><a href="#special">Special Ocassions</a></li>
    </ul>
  </div>
</div>


<div id="all" class="col s12">
  <div id="wrapper">
    <div id="columns">
      <% @items.each_with_index do |item, index| %>
      <div class="pin">
      <%#= image_tag(item.main_image, class: "modal-trigger test") %>
       <img class="modal-trigger" href="#all_items<%= index %>" src="<%= item.main_image_url %>" />
        <h4 class="center" style=""> <%= link_to(item.title, item_path(item)) %> </h4>
        <p>
          <%= item.description %>
        </p>
      </div>
      <div id="all_items<%= index %>" class="modal">
        <div class="modal-content">
         <a href="<%= item_path(item) %>"> <img src="<%= item.main_image_url %>" /> </a>
       </div>
     </div>
     <% end %>
   </div>
 </div>
</div>

<div id="weddings" class="col s12">
  <div id="wrapper">
    <div id="columns">
     <% @items.each do |item| %>
     <% if item.wedding_category? %>
     <div class="pin">
     <%= image_tag(item.main_image_url, class: "modal-trigger", href: "##{item.category}#{item.id}") %>
      <p>
        <%= item.description %>
      </p>
    </div>
    <div id="<%= item.category %><%= item.id %>" class="modal">
      <div class="modal-content">
        <a href="<%= item_path(item) %>"> <img style="width: 100%; height: 100%;"src="<%= item.main_image_url %>" /> </a>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
</div>
</div>


<div id="birthdays" class="col s12">
  <div id="wrapper">
    <div id="columns">
     <% @items.each do |item| %>
     <% if item.birthday_category? %>
     <div class="pin">
       <%= image_tag(item.main_image_url, class: "modal-trigger", href: "##{item.category}#{item.id}") %>
       <p>
         <%= item.description %>
       </p>
     </div>
     <div id="<%= item.category %><%= item.id %>" class="modal">
      <div class="modal-content">
        <a href="<%= item_path(item) %>"> <img style="width: 100%; height: 100%;"src="<%= item.main_image_url %>" /> </a>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
</div>
</div>

<div id="special" class="col s12">
 <div id="wrapper">
  <div id="columns">
   <% @items.each do |item| %>
   <% if item.special_category? %>
   <div class="pin">
    <%= image_tag(item.main_image_url, class: "modal-trigger", href: "##{item.category}#{item.id}") %>
    <p>
     <%= item.description %>
   </p>
 </div>
 <div id="<%= item.category %><%= item.id %>" class="modal">
  <div class="modal-content">
    <a href="<%= item_path(item) %>"> <img style="width: 100%; height: 100%;"src="<%= item.main_image_url %>" /> </a>
  </div>
</div>
<% end %>
<% end %>
</div>
</div>
</div>