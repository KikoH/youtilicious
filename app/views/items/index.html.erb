<div class="row">
  <div class="col s12">
    <ul class="tabs">
      <li class="tab col s3"><a href="#all">All</a></li>
      <li class="tab col s3"><a href="#weddings">Weddings</a></li>
      <li class="tab col s3"><a href="#birthdays">Birthdays</a></li>
      <li class="tab col s3"><a href="#custom">Custom</a></li>
  </ul>
</div>
</div>


<div id="all" class="col s12">
  <div id="wrapper">
    <div id="columns">
      <% @items.each do |item| %>
      <div class="pin">
        <img class="modal-trigger" href="#<%= item.title %>"src="<%= item.image_url %>" />
        <p>
          <%= item.description %>
      </p>
  </div>
  <div id="<%= item.title %>" class="modal">
    <div class="modal-content">
       <a href="<%= item_path(item) %>"> <img style="width: 100%; height: 100%;"src="<%= item.image_url %>" /> </a>
   </div>
</div>
<% end %>
</div>
</div>
</div>

<div id="weddings" class="col s12">
  <div id="wrapper">
    <div id="columns">
       <% @items.limit(5).each do |item| %>
       <% if item.wedding_category? %>
       <div class="pin">
          <img class="modal-trigger" href="#<%= item.title %>"src="<%= item.image_url %>" />
          <p>
            <%= item.description %>
        </p>
    </div>
    <div id="<%= item.title %>" class="modal">
      <div class="modal-content">
        <a href="<% item_path(item) %>"> <img style="width: 100%; height: 100%;"src="<%= item.image_url %>" /> </a>
    </div>
</div>
<% end %>
<% end %>
</div>
</div>
</div>


<div id="birthdays" class="col s12">
<div id="wrapper">
      <div id="columns">
         <% @items.each do |item| %>
           <% if item.birthday_category? %>
             <div class="pin">
               <img class="modal-trigger" href="#<%= item.title %>"src="<%= item.image_url %>" />
                 <p>
                   <%= item.description %>
                </p>
             </div>
        <div id="<%= item.title %>" class="modal">
          <div class="modal-content">
            <a href="<% item_path(item) %>"> <img style="width: 100%; height: 100%;"src="<%= item.image_url %>" /> </a>
          </div>
        </div>
          <% end %>
        <% end %>
      </div>
  </div>
</div>

<div id="custom" class="col s12">
   <div id="wrapper">
      <div id="columns">
         <% @items.each do |item| %>
           <% if item.custom_category? %>
             <div class="pin">
               <img class="modal-trigger" href="#<%= item.title %>"src="<%= item.image_url %>" />
                 <p>
                   <%= item.description %>
                </p>
             </div>
        <div id="<%= item.title %>" class="modal">
          <div class="modal-content">
            <a href="<% item_path(item) %>"> <img style="width: 100%; height: 100%;"src="<%= item.image_url %>" /> </a>
          </div>
        </div>
          <% end %>
        <% end %>
      </div>
  </div>
</div>


</div>