<div class="row">
  <div class="col s12">
    <ul class="tabs">
      <li class="tab col s3"><a href="#test1">All</a></li>
      <li class="tab col s3"><a href="#test2">Weddings</a></li>
      <li class="tab col s3"><a href="#test3">Birthdays</a></li>
      <li class="tab col s3"><a href="#test4">Custom</a></li>
    </ul>
  </div>


  <div id="test1" class="col s12">
    <div id="wrapper">
      <div id="columns">
        <% @items.each do |item| %>
        <div class="pin">
          <img class="modal-trigger" href="#<%= item.title %>"src="<%= item.image_url %>" />
          <p>
            <%= item.description %>
          </p>
        </div>
        <div id="<%= item.title %>" class="modal">
          <div class="modal-content">
           <a href="<%= item_path(item) %>"> <img style="width: 100%; height: 100%;"src="<%= item.image_url %>" /> </a>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>


  <div id="test2" class="col s12">
    <div id="wrapper">
     <div id="columns">
     <% @items.limit(5).each do |item| %>
      <div class="pin">
        <img class="modal-trigger" href="#<%= item.title %>"src="<%= item.image_url %>" />
        <p>
          <%= item.description %>
        </p>
      </div>
      <div id="<%= item.title %>" class="modal">
        <div class="modal-content">
          <a href="<% item_path(item) %>"> <img style="width: 100%; height: 100%;"src="<%= item.image_url %>" /> </a>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
<div id="test3" class="col s12">Birthdays</div>
<div id="test4" class="col s12">Custom</div>
</div>